<md-toolbar class="md-whiteframe-z1">
    <div class="md-toolbar-tools">
        <md-button class="toggle-menu md-icon-button"
                   ng-class="{'active':$state.current.data.folded}"
                   ng-click="openMenu()"
                   hide-gt-sm
                   aria-label="Toggle Menu">
            <i class="mdi mdi-menu i-24"></i>
        </md-button>
        <div layout="row">
            <span class="h4" ng-bind="$state.current.data.title"></span>
        </div>
        <span flex=""></span>

        <md-button class="md-icon-button">
            <i class="mdi mdi-magnify i-24"></i>
        </md-button>
        <md-button class="md-icon-button">
            <i class="mdi mdi-account-outline i-24"></i>
        </md-button>
    </div>
</md-toolbar>
